includes:
  - vendor/szepeviktor/phpstan-wordpress/extension.neon
  # Optional: baseline once you’re ready
  # - phpstan-baseline.neon

parameters:
  level: 2            # ← lower during active dev; raise later in Hardening
  paths: [ . ]
  excludePaths: [ vendor/*, node_modules/*, .github/* ]

  stubFiles:
    - vendor/php-stubs/wordpress-stubs/wordpress-stubs.php
    - stubs/elementor.php

  bootstrapFiles:
    - stubs/constants.php