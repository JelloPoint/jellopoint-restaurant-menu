<?xml version="1.0"?>
<ruleset name="JelloPoint">
  <file>./</file>

  <!-- Only errors, ignore warnings -->
  <config name="warning_severity" value="0"/>

  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern>node_modules/*</exclude-pattern>
  <exclude-pattern>.github/*</exclude-pattern>
  <exclude-pattern>*.zip</exclude-pattern>

  <rule ref="WordPress-Core"/>
  <!-- You can re-enable these later -->
  <!-- <rule ref="WordPress-Docs"/> -->
  <!-- <rule ref="WordPress-Extra"/> -->

  <config name="testVersion" value="7.4-8.3"/>
  <!-- Comment out temporarily if noisy -->
  <!-- <rule ref="PHPCompatibilityWP"/> -->
</ruleset>